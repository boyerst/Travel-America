<%- include('../partials/header.ejs') %>

<h3 class="loginRegister">Sign up here</h3>

<p><%= message %></p>

<form class='inputForm' method='POST' action='/auth/register'>
	<fieldset class='fieldset'>
		<legend>
			<small class="fieldsetTitle">
			Choose Username & Password
			</small>
		</legend>
	<div class='regLoginForm'>
		<label class='label' for='emailAddress'>Email</label>
		<input class='input' 
		id='emailAddress'
		type='text'
		name='emailAddress'
		placeholder='Email Address...'
		/>
	</div>
	<div class='regLoginForm'>
		<label class='label' for='user'>Username</label>
		<input class='input'
		id='user'
		type='text'
		name='user'
		placeholder='Username...'
		/>
	</div>
	<div class='regLoginForm'>
		<label class='label' for='password'>Password</label>
		<input class='input' 
		id='password'
		type='password'
		name='password'
		placeholder='Password...'
		>
	</div>
	<button class='signupButton'>Sign up!</button>
	</fieldset>
</form>








<%- include('../partials/footer.ejs') %>